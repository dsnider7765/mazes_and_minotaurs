<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/character_level_view"
                    android:background="@drawable/character_sheet_box_white"
                    android:layout_width="68dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="36sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/character_name_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/character_sheet_box_black"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/character_class_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:background="@drawable/character_sheet_box_gray"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textSize="24sp"/>

                </LinearLayout>

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <!-- Row One -->
                <TableRow
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/might_score_title_view"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/might"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/skill_score_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/skill"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/wits_score_title_view"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/wits"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                </TableRow>

                <!-- Row 2 -->
                <TableRow>

                    <Button
                        android:id="@+id/might_score_button"
                        android:layout_width="63dp"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/skill_score_button"
                        android:layout_width="63dp"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/wits_score_button"
                        android:layout_width="63dp"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>
                </TableRow>

                <!-- Row 3 -->
                <TableRow
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/luck_score_title_view"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/luck"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/will_score_title_view"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/will"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/grace_score_title_view"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_gray_no_bottom"
                        android:text="@string/grace"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                </TableRow>

                <!-- Row 4 -->
                <TableRow>

                    <Button
                        android:id="@+id/luck_score_button"
                        android:layout_width="63dp"
                        android:layout_column="0"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/will_score_button"
                        android:layout_width="63dp"
                        android:layout_column="1"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>

                    <Button
                        android:id="@+id/grace_score_button"
                        android:layout_width="63dp"
                        android:layout_column="2"
                        android:background="@drawable/character_sheet_box_white_no_top"
                        android:text="10"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textAlignment="center"
                        android:textSize="24sp"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>